# AURAX Frontend Environment Configuration

# API Base URL - Points to production-ready backend (backend-copy)
# Note: In development, the app auto-detects your network IP for mobile access
# When accessed from mobile (e.g., 192.168.1.3:3000), backend URL automatically becomes http://192.168.1.3:5002
REACT_APP_API_URL=http://localhost:5002
REACT_APP_API_BASE_URL=http://localhost:5002

# Instagram OAuth Configuration
REACT_APP_INSTAGRAM_CLIENT_ID=1975238456624246
REACT_APP_REDIRECT_URI=http://localhost:3000/dashboard
PORT=3000

# Environment
NODE_ENV=development

# Optional: Disable source maps for faster builds in development
GENERATE_SOURCEMAP=false

# SMTP Configuration for SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here

# Email Configuration
EMAIL_FROM=hello@auraxai.in
